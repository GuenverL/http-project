{% extends "CVBundle::layout.html.twig" %}
{% block title %}
Accueil - {{ parent() }}
{% endblock %}

{% block CV_body %}
<h2>Liste des annonces</h2>

<ul>
    {% for cv in listCVs %}
      <li>
        <a href="{{ path('CV_view', {'id': cv.id}) }}">
        CV
        </a>
        Ajout√© par {{ "moi" }},
        le {{ cv.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

<ul class="pagination">
    {% for p in range(1, nbPages) %}
        <li{% if p == page %}class="active"{% endif %}>
                <a href="{{ path('CV_home', {'page': p}) }}">{{ p }}</a>
        </li>
    {% endfor %}
</ul>
{% endblock %}
